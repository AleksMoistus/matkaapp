<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("../partials/head.ejs") %>
        <title>Upcoming Treks</title>
</head>

<body>
    <div class="headerSection d-flex">
        <div class="container">
            <%- include ("../partials/header.ejs") %>
            <div class="treksSection container">
        <div class="row">
          <% for(let i=0; i < hikes.length; i++) { %>
          <div class="col-md-4 card">
            <img class="card-img-top" src="<%= hikes[i].imgURL %>"">
            <div class="card-body">
              <h4 class="card-title"><%= hikes[i].name %></h4>
              <p>
                <%= hikes[i].description %>
              </p>
              <p>Participants: <%= hikes[i].part.length %></p>
              <a href="#" class="btn btn-primary">Register</a>
            </div>
          </div>
          <% } %>
        </div>
      </div>
        </div>
    </div>
    
</body>

</html>